<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <TextView
        android:id="@+id/activityMain_textView_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_margin="22dp"
        android:layout_marginEnd="12dp"
        android:layout_marginStart="6dp"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="8dp"

        android:padding="8dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:paddingEnd="12dp"
        android:paddingStart="12dp"

        android:background="@drawable/textview"
        android:backgroundTint="@color/red"

        android:text="https://google.com"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="normal"

        android:autoLink="all"
        android:linksClickable="false"
        android:textColorLink="@color/black"

        android:drawableEnd="@drawable/ic_android_black_24dp"
        android:drawableBottom="@drawable/ic_android_black_24dp"
        android:drawableStart="@drawable/ic_android_black_24dp"
        android:drawableTop="@drawable/ic_android_black_24dp"
        android:drawableTint="@color/white"
        android:drawablePadding="12dp"

        android:fontFamily="monospace"
        android:elevation="6dp"
        android:visibility="visible"
        android:gravity="center"
        />

    <EditText
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_margin="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"

        android:padding="12dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:paddingEnd="12dp"
        android:paddingStart="12dp"

        android:drawableEnd="@drawable/ic_android_black_24dp"
        android:drawableBottom="@drawable/ic_android_black_24dp"
        android:drawableStart="@drawable/ic_android_black_24dp"
        android:drawableTop="@drawable/ic_android_black_24dp"
        android:drawableTint="@color/green"
        android:drawablePadding="8dp"

        android:hint="@string/name"
        android:textColorHint="@color/black"


        android:background="@drawable/textview"
        android:backgroundTint="@color/red"

        android:fontFamily="@font/font"
        android:visibility="visible"
        android:gravity="start"
        android:inputType="number"
        />

    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_margin="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"


        android:background="@drawable/textview"
        android:backgroundTint="@color/red"
        android:fontFamily="sans-serif-medium"


        android:gravity="end"

        android:padding="12dp"
        android:paddingStart="12dp"
        android:paddingTop="12dp"
        android:paddingEnd="12dp"
        android:paddingBottom="12dp"

        android:text="Abolfazl"

        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="36sp"
        android:textStyle="italic"
        android:visibility="visible"
        app:icon="@drawable/ic_android_black_24dp"
        app:iconPadding="8dp" />


</LinearLayout>